<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LinearLayout"
    android:gravity="center">
    <android.support.v7.widget.CardView
        style="@style/MatchWidth"
        app:cardCornerRadius="20dp"
        android:layout_margin="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <ImageView
            android:id="@+id/img_posture"
            style="@style/ImageViewCardView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/txv_descrip"
            android:maxLines="4"
            android:drawablePadding="10dp"
            android:text="description"
            android:ellipsize="end"
            android:layout_below="@+id/img_posture"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_below="@id/txv_descrip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="  ZAOBSERWOWANO WADÄ˜  "
            android:background="@drawable/red_frame"
            android:textSize="19sp"
            android:id="@+id/txv_questionExam"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>